# ============================================================
# Indian Voice Agent Builder - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your API keys
# DO NOT commit .env file to version control
# ============================================================

# APPLICATION
APP_NAME=IndianVoiceAgent
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/voice_agent_db
REDIS_URL=redis://localhost:6379

# ============================================================
# LLM PROVIDERS - Choose at least one
# ============================================================

# Groq (FREE - 30 requests/min, No credit card required)
# Get API key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# OpenAI (PAID - $5 free credits on signup, requires credit card)
# Get API key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Anthropic Claude (PAID - $5 free credits)
# Get API key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus

# Google Gemini (FREE - 60 requests/min, No credit card required)
# Get API key: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Together AI (FREE tier available)
# Get API key: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key_here

# ============================================================
# TEXT-TO-SPEECH (TTS) PROVIDERS
# ============================================================

# Google Cloud Text-to-Speech (FREE - 1M chars/month)
# Get credentials: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# ElevenLabs (PAID - 10k free characters/month with free account)
# Get API key: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Azure Speech Services (PAID - Free tier 5k audio requests/month)
# Get key: https://portal.azure.com/
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Replicate (FREE tier available for voice cloning)
# Get API token: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Cartesia (PAID - Free tier available)
# Get API key: https://cartesia.ai/
CARTESIA_API_KEY=your_cartesia_api_key_here

# ============================================================
# SPEECH-TO-TEXT (STT) PROVIDERS
# ============================================================

# Google Cloud Speech-to-Text (FREE - 60 min/month)
# Uses same credentials as TTS above
GOOGLE_STT_MODEL=latest_long

# OpenAI Whisper (PAID via OpenAI API)
# Uses OPENAI_API_KEY above
WHISPER_MODEL=whisper-1

# Azure Speech Recognition (PAID)
# Uses same credentials as Azure TTS above

# Groq Whisper (FREE)
# Uses GROQ_API_KEY above

# AssemblyAI (FREE trial - 100 concurrent requests)
# Get API key: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Deepgram (PAID - Free tier with limited requests)
# Get API key: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ============================================================
# PHONE INTEGRATION
# ============================================================

# Vapi (PAID - Voice calling AI Agent Platform)
# Get API key: https://dashboard.vapi.ai/org/api-keys
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER=your_vapi_phone_number

# Twilio (PAID - $0.01-0.05 per minute)
# Get credentials: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Exotel (PAID - Indian telecom company)
# Get credentials: https://exotel.com/
EXOTEL_API_KEY=your_exotel_api_key_here
EXOTEL_API_TOKEN=your_exotel_api_token_here
EXOTEL_CALLER_ID=your_exotel_caller_id

# ============================================================
# AUTHENTICATION & SECURITY
# ============================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ============================================================
# VOICE CLONING
# ============================================================

# Voice sample storage
VOICE_SAMPLES_DIR=./voice_samples
VOICE_LIBRARY_DIR=./voice_library
MAX_VOICE_SAMPLE_SIZE_MB=10

# ============================================================
# LANGUAGES SUPPORT - All 9 Indian Languages
# ============================================================

SUPPORTED_LANGUAGES=hi,ta,te,kn,ml,bn,gu,mr,en_IN
# Hindi (hi), Tamil (ta), Telugu (te), Kannada (kn), Malayalam (ml)
# Bengali (bn), Gujarati (gu), Marathi (mr), English India (en_IN)

# ============================================================
# OPTIONAL: Google OAuth
# ============================================================

# For login via Google
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================================
# STORAGE
# ============================================================

# Google Cloud Storage (for production deployment)
GCS_BUCKET_NAME=your_gcs_bucket_name
GCS_PROJECT_ID=your_gcs_project_id

# Local storage fallback
LOCAL_STORAGE_PATH=./uploads

# ============================================================
# API DOCUMENTATION
# ============================================================
# FREE APIs requiring no credit card:
# 1. Groq LLM - 30 req/min free tier
# 2. Google Gemini - 60 req/min free tier
# 3. Google TTS - 1M chars/month free
# 4. Google STT - 60 min/month free
# 5. Replicate - Free tier available
#
